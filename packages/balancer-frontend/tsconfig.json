{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "strict": true,
        "jsx": "preserve",
        "baseUrl": "src",
        "paths": {
            "@/*": [ "*" ]
        },
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "tests/**/*.ts"
    ]
}
